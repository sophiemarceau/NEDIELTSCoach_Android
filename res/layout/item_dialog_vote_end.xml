<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
<View 
    android:id="@+id/myview"
    android:layout_width="fill_parent"
    android:layout_height="4dp"
    android:background="@color/describe_color"
    />
        <TextView
            android:id="@+id/item_votedetails_txt_choose"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/myview"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_votedetails_txt_choose_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:text="10%" />

        <TextView
            android:id="@+id/item_votecontent_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_votedetails_txt_choose"
            android:layout_alignBottom="@+id/item_votedetails_txt_choose"
            android:layout_centerHorizontal="true"
            android:text="TextView" />
        <View 
    android:layout_width="fill_parent"
    android:layout_below="@id/item_votecontent_txt"
    android:layout_height="4dp"
    android:background="@color/describe_color"
    />
        
    </RelativeLayout>

</LinearLayout>