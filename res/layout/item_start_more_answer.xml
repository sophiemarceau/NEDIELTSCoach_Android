<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp" >

        <ImageView
            android:id="@+id/item_img_start_more_answer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/item_img_sex_start_more_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/item_txt_name_start_more_answer" />

        <TextView
            android:id="@+id/item_txt_num_start_more_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/item_img_sex_start_more_answer"
            android:text="BJ14089"
            android:textColor="@color/describe_color" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:text="时间" />

        <TextView
            android:id="@+id/item_txt_time_start_more_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="4:29" />

        <TextView
            android:id="@+id/item_txt_name_start_more_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/item_img_start_more_answer"
            android:text="李响" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/describe_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.lelts.tool.GridViewForListView
            android:id="@+id/item_gridview_start_more_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:focusable="false"
            android:scrollbars="none" >
        </com.lelts.tool.GridViewForListView>

        <RelativeLayout
             android:id="@+id/item_img_click_startore_answer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/myview"
            android:layout_alignParentRight="true" 
            android:layout_margin="5dp">

            <ImageView
                 android:id="@+id/item_img_click_imageshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                
                android:src="@drawable/item_stra_moretzhangkaiqian" />
        </RelativeLayout>

        <View
            android:id="@+id/myview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/describe_color" />
    </RelativeLayout>

</LinearLayout>