<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txt_tishi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textSize="18sp"
        android:text="选择当前课次" />

    <ImageButton
        android:id="@+id/waing_choose_classes_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:background="@null"
        android:src="@drawable/guanbi" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_below="@+id/txt_tishi1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        >

        <ListView
            android:id="@+id/waring_listview_choose_classes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >
        </ListView>
        
    </RelativeLayout>

    <Button
        android:id="@+id/waing_choose_classes_btn_sure"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="33dp"
        android:background="@drawable/btn_clickanniu"
        android:text="确定"
        android:textColor="@color/white" />

</RelativeLayout>