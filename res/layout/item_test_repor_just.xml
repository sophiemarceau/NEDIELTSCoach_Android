<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.example.hello"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<View 
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/describe_color"
    /> 
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <TextView
        android:id="@+id/item_txtname_test_report_just"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="13dp"
        android:textSize="16sp"
        android:text="1.选择题名称" />

    <TextView
        android:id="@+id/item_txtanswer_test_report_just"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_txtname_test_report_just"
        android:layout_below="@+id/item_txtname_test_report_just"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/font_color"
        android:text="正确答案：TRUE" />

    <com.lelts.tool.RoundProgressBar
        android:id="@+id/roundProgressBar3_just"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/item_txtname_test_report_just"
        android:layout_marginRight="42dp"
        android_custom:roundColor="#e84d60"
        android_custom:roundProgressColor="#e84d60"
        android_custom:roundWidth="6dip"
        android_custom:textIsDisplayable="false" />

    <com.lelts.tool.RoundProgressBar
        android:id="@+id/roundProgressBar2_just"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignBottom="@+id/roundProgressBar3_just"
        android:layout_alignLeft="@+id/roundProgressBar3_just"
        android_custom:roundColor="#D1D1D1"
        android_custom:roundProgressColor="#e84d60"
        android_custom:roundWidth="6dip"
        android_custom:textColor="#e84d60"
        android_custom:textSize="18sp" />

    <TextView
        android:id="@+id/item_txttrue_test_report_just"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_txtanswer_test_report_just"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:background="@drawable/zhengquelv"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="正确率" />
    
</RelativeLayout>

<View 
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/describe_color"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp" >

        <TextView
            android:id="@+id/textView1_just"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn1_just"
            android:layout_alignTop="@+id/linearLayout1"
            android:text="TRUE"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView3_just"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn3_just"
            android:layout_below="@+id/btn3_just"
            android:text="FALSE"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView4_just"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn4_just"
            android:layout_below="@+id/linearLayout1"
            android:text="NOT GIVEN"
            android:textSize="15sp" />

        <View
            android:id="@+id/view1"
            android:layout_width="1dp"
            android:layout_height="220dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/image_juset"
            android:background="@color/describe_color" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/view1"
            android:layout_alignParentRight="true"
            android:background="#aaaaaa"
            android:orientation="horizontal" >
        </LinearLayout>

        <TextView
            android:id="@+id/btn1_just"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4_just"
            android:layout_marginLeft="45dp"
            android:layout_toRightOf="@+id/view1"
            android:background="@drawable/edit_round"
            android:gravity="top|center"
            android:text="5"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/btn3_just"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4_just"
            android:layout_marginLeft="33dp"
            android:layout_toRightOf="@+id/textView1_just"
            android:background="@drawable/edit_round2"
            android:gravity="top|center"
            android:text="3"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/btn4_just"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout1"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/textView3_just"
            android:background="@drawable/edit_round2"
            android:gravity="top|center"
            android:text="5"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/image_juset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn4_just"
            android:layout_marginBottom="12dp"
            android:layout_toLeftOf="@+id/linearLayout1"
            android:src="@drawable/xian" />

    </RelativeLayout>

</LinearLayout>
