<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/waing_end_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:background="@null"
        android:src="@drawable/guanbi" />

    <TextView
        android:id="@+id/txt_tishi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waing_btn_close"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:textSize="18sp"
        android:text="确定下课么？"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_tishi2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="15sp"
        android:text="您是否已经完成所有课上同步练习？" />

    <Button
        android:id="@+id/waing_end_btn_sure"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_clickanniu"
        android:text="确定"
        android:textColor="@color/white" />

</RelativeLayout>