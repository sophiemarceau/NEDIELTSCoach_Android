<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:weightSum="5" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:weightSum="6" >

            <ImageView
                android:id="@+id/roundimageview_student_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15sp"
                android:src="@drawable/mor" />

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="4"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" >

                    <TextView
                        android:id="@+id/textview_student_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="刘诗诗" />

                    <ImageView
                        android:id="@+id/imageview_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5sp"
                        android:layout_toRightOf="@+id/textview_student_name"
                        android:src="@drawable/ioc_nv2x" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textview_student_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BJ1819415"
                    android:textColor="@color/describe_color"
                    android:textSize="10dp" />

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5" >

                    <TextView
                        android:id="@+id/textview_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="雅思考试倒计时:"
                        android:textColor="@color/describe_color"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/textview_student_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5sp"
                        android:layout_toRightOf="@+id/textview_test"
                        android:text="32"
                        android:textColor="@color/describe_color"
                        android:textSize="10dp" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/textview_student_day"
                        android:text="天"
                        android:textColor="@color/describe_color"
                        android:textSize="10dp" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_study_result"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/imageview_background_result"
                android:text="成绩单"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_divider" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="3"
            android:weightSum="5" >

            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/imageview_myself_result_redcircle" >

                    <TextView
                        android:id="@+id/textview_listener_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="6.5" 
                        android:textColor="@color/red"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Listening"
                    android:textColor="@color/describe_color"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="5sp"
                android:layout_height="wrap_content"
                android:background="@color/white" />

          <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/imageview_myself_result_redcircle" >

                    <TextView
                        android:id="@+id/textview_read_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="6.5"
                        android:textColor="@color/red" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Reading"
                    android:textColor="@color/describe_color"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="5sp"
                android:layout_height="wrap_content"
                android:background="@color/white" />

           <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/imageview_myself_result_redcircle" >

                    <TextView
                        android:id="@+id/textview_write_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="6.5" 
                        android:textColor="@color/red"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Writing"
                    android:textColor="@color/describe_color"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="5sp"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/imageview_myself_result_redcircle" >

                    <TextView
                        android:id="@+id/textview_speak_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="6.5"
                        android:textColor="@color/red" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Speaking"
                    android:textColor="@color/describe_color"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="5sp"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/imageview_myself_result_redcircle" >

                    <TextView
                        android:id="@+id/textview_all_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="6.5" 
                        android:textColor="@color/red"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="OverAll BandScore"
                    android:textColor="@color/describe_color"
                    android:maxLines="2"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10sp"
        android:background="@color/line_divider" />


</LinearLayout>