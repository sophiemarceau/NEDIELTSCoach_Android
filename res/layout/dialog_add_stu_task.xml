<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <ImageButton
        android:id="@+id/dialog_add_test_imgbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:background="@null"
        android:src="@drawable/guanbi" />

    <TextView
        android:id="@+id/txt_tishi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waing_btn_close"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="添加课堂练习题"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dialog_addtest_btn_sure"
        android:layout_below="@+id/txt_tishi2"
        android:layout_marginTop="28dp"
        android:text="编号："
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialog_testnum_txt_addtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/textView1"
        android:text="12312312"
        android:textColor="@color/font_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="5dp"
        android:text="试题："
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialog_testname_waring_addtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/dialog_testnum_txt_addtest"
        android:text="雅思口语阶段"
        android:textColor="@color/font_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="5dp"
        android:text="题目数量："
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialog_testcount_waring_addtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:text="5"
        android:textColor="@color/font_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="11dp"
        android:text="是否添加到您本次的课堂练习中！"
        android:textColor="@color/gray" />

    <Button
        android:id="@+id/dialog_addtest_btn_sure"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/btn_clickanniu"
        android:text="确定"
        android:textColor="@color/white" />

</RelativeLayout>
