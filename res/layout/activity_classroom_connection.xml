<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
         >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="同步学员"
            android:textSize="16sp"
             />

        <ImageButton
            android:id="@+id/btn_back_ClassRoom_conncetion"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:src="@drawable/select_imgview_back" />

    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/font_color"
        
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/themegrey" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="课堂暗号" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/describe_color" >

            <TextView
                android:id="@+id/fragment_classroom_txt_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="88888888"
                android:textColor="@color/white"
                android:textScaleX="2.1"
                android:textSize="20sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="把这组数字发给学员，同步到课堂练习"
            android:textColor="@color/describe_color" />
    </RelativeLayout>

    <RelativeLayout 
         android:layout_width="match_parent"
        android:layout_height="30dp"
        
        >

        <TextView
            android:id="@+id/txt_ClassRoom_conncetion_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:textSize="18sp"
            android:text="学员列表" />
        
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/describe_color"
        />
    <RelativeLayout 
         android:layout_width="match_parent"
        android:layout_height="260dp"
      
        >

        <GridView
            android:id="@+id/ClassRoom_conncetion_gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="5"
            android:columnWidth="5dp"
            android:listSelector="#00000000"
            android:gravity="center">
        </GridView>
        
            </RelativeLayout>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/themegrey"
    >

    <Button
        android:id="@+id/btn_next_ClassRoom_conncetion"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_clickanniu"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:text="下一步" />
    
</RelativeLayout>
</LinearLayout>