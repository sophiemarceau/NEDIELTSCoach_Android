            android:background="@color/red" />

        <TextView
            android:id="@+id/tv_sd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="手动分组"
            android:padding="10dp"
            android:textSize="15sp"  />

    </LinearLayout>

