<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/txt_vote_choose"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@id/txt_vote_percent" />

        <TextView
            android:id="@+id/txt_vote_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/txt_vote_percent"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="内容" />

        <TextView
            android:id="@+id/txt_vote_percent"
            android:layout_width="35dp"
               android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_vote_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="40%" />
    </RelativeLayout>

</LinearLayout>